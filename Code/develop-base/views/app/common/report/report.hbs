        loadMsg:'正在加载...'
    });

    $('#reportDataTable').datagrid({
        url:'{{projcfg.appurl}}/admin/api/common/report/report',
        method:'get',
        rownumbers:true,
        //autoRowHeight:true,
        striped:true,
        fitColumns:true,
        toolbar: '#toolbar',
        fit:true,
        border:true,
        singleSelect:true,
        columns:[[
            {field:'_id',checkbox:true},
            {"field": "report_name","title":"报表名称","width":80},
            {"field": "report_db","title":"连接数据库名","width":90},
            {"field": "report_desc","title":"报表描述","width":150},
            {"field": "creator","title":"创建人","width":70},
            {"field": "createDt","title":"创建时间","width":100,
                formatter : function(value, rowData, rowIndex) {
                    return new Date(value).format();
                }
            },
            {"field": "opt","title":"操作","width":60,
                "formatter":function (value, rowData,rowIndex) {
                    return '<a href="report_design?'+rowData.report_name+'" target="_blank"><font style="color:blue">设计</font></a> |<a href="report_view?'+rowData.report_name+'"  target="_blank"> <font style="color:red">预览</font></a>';
                }
