    // 新增数据
    function doAddCatalog(value) {

        // 验证表单
        var validate = $('#catalogForm').form('validate');
        if(!validate) {
            return false;
        }
        $.ajax({
            url: '{{projcfg.appurl}}/admin/api/common/report/report/catalog',
            type: 'post',
            data: $('#catalogForm').serializeJson(),
            success: function (data) {
                if(data.success) {
                    msgSuccess(data.msg);
                    closeCatalogDialog();
                    initLeftCatalogTree();
                }
                else {
                    msgError(data.msg+',错误代码:'+data.code);
                }
            }
        });
    }

    // 打开修改类别页面
    function toEditCatalog() {
        var selectedNode = $('#catalogTree').tree('getSelected');
        if (!selectedNode||selectedNode.id==0) {
            msgError('提示,请选择一条数据再进行修改');
            return false;
        }
        var id = selectedNode.id;
        $.ajax({
            url: '{{projcfg.appurl}}/admin/api/common/report/report/catalog/'+id,
            type: 'get',
            success: function (data) {
                if(data.success) {
                    $('#catalogForm').form('load',data.data[0]);
                }
                else {
                    msgError(data.msg+',错误代码:'+data.code);
                }
            }
        });
        openCatalogPage("修改类别", id, doEditCatalog);
    }

    // 修改数据
    function doEditCatalog(value) {

        // 验证表单
        var validate = $('#catalogForm').form('validate');
        if(!validate) {
            return false;
        }
        $.ajax({
            url: '{{projcfg.appurl}}/admin/api/common/report/report/catalog/'+value,
            type: 'put',
            data: $('#catalogForm').serializeJson(),
            success: function (data) {
                if(data.success) {
                    msgSuccess(data.msg);
                    closeCatalogDialog();
                    initLeftCatalogTree();
                }
                else {
                    msgError(data.msg+',错误代码:'+data.code);
                }
            }
        });

    }

    function initLeftCatalogTree(sysid) {
        $('#catalogTree').tree({
            method:'get',
            url:'{{projcfg.appurl}}/admin/api/common/report/report/tree/'+sysid,
            onClick:function(node) {
                var isLeaf = $('#catalogTree').tree('isLeaf', node.target);
                if(isLeaf) {
                    currentCatalogpid = node.id;
                    $('#reportDataTable').datagrid('load',{
                        report_catalogid:currentCatalogpid
                    });
                }else{
                    $('#reportDataTable').datagrid('load',{
                    });
                }
            }
        });
    }

    function closeCatalogDialog() {
        $('#catalogModal').dialog('close');
        clearCatalogForm();
    }


    function initFormCatalogTree(sysid) {
        $('#report_catalogid').combotree({
            method:'get',
            url:'{{projcfg.appurl}}/admin/api/common/report/report/tree/'+sysid,
            required: true,
            panelHeight:300,
            value:currentCatalogpid ? currentCatalogpid : '0',
            editable:false
        });
    }



    //设置权限
    function doSetPermission(){
        var reportData = $("#reportDataTable").datagrid('getChecked');
        if(reportData.length==0){
            msgError('提示,请选择一条报表数据');
            return;
        }

        var roleDatas = $("#roleDataTable").datagrid('getChecked');
        if(roleDatas.length==0){
            msgError('提示,请选择角色数据');
            return;
        }
        //var datas = new Array();
        var reRoles ="";
        for(var i =0;i<roleDatas.length;i++){
            reRoles +=roleDatas[i]._id;
            if(i<roleDatas.length-1){
                reRoles +=",";
            }
        }
        console.log("reRoles:"+reRoles);

        $.ajax({
            url:"{{projcfg.appurl}}/admin/api/common/report/report/role",
            data:{
                report_id:reportData[0]._id,
                datas:reRoles
                },
            method:'post',
            success: function (data) {
                if(data.success) {
                    msgSuccess(data.msg);
                }
                else {
                    msgError(data.msg+',错误代码:'+data.code);
                }
            }
        });
    }

    //勾选已分配的角色
    function getCheckRole(id){
        $.ajax({
            url:"{{projcfg.appurl}}/admin/api/common/report/report/role/"+id,
            method:'get',
            success: function (data) {
                if(data.success){
                    var arrDatas = data.data;
                    var gridRows = $('#roleDataTable').datagrid('getRows');
                    $('#roleDataTable').datagrid('unselectAll');//取消全选
                    for(var i=0;i<arrDatas.length;i++){
                        var tempRoleId = arrDatas[i].role_id;
                        for(var j=0;j<gridRows.length;j++){
                            if(tempRoleId==gridRows[j]._id){
                                console.log("选中第"+j+"行")
                                $('#roleDataTable').datagrid("checkRow",j);
                            }
                        }
                    }
                }
            }
        });
    }

</script>