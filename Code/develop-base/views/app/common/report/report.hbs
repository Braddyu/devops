<script>

    Date.prototype.format = function(format){
        if(isNaN(this.getMonth())){
            return '';
        }
        if(!format){
            format = 'yyyy-MM-dd hh:mm:ss';
        }
        var o = {
            //month
            "M+" : this.getMonth() + 1,
            //day
            "d+" : this.getDate(),
            //hour
            "h+" : this.getHours(),
            //minute
            "m+" : this.getMinutes(),
            //second
            "s+" : this.getSeconds(),
            //quarter
            "q+" : Math.floor((this.getMonth() + 3) / 3),
            //millisecond
            "s" : this.getMilliseconds()
        };
        if(/(y+)/.test(format)){
            format = format.replace(RegExp.$1,(this.getFullYear() + "").substr(4 - RegExp.$1.length));
        }
        for(var k in o){
            if(new RegExp("(" + k + ")").test(format)){
                format = format.replace(RegExp.$1,RegExp.$1.length == 1 ? o[k] : ("00" + o[k]).substr(("" + o[k]).length));
            }
        }
        return format;
    };

    var currentCatalogpid;
    var currentSysId = '{{currentUser.user_sys._id}}';
    $(function(){
        $('#inputSysId').combobox({
            method: 'get',
            url: '{{projcfg.appurl}}/public/sysData',
            valueField:'_id',
            textField:'sys_name',
            value:currentSysId,
            editable:false,
            onChange: function (newValue,oldValue) {
                currentSysId = newValue;
                // 加载角色菜单操作树
                initLeftCatalogTree(currentSysId);

                $('#reportDataTable').datagrid('load',{
                    sys_id:currentSysId
                });

                $('#roleDataTable').datagrid('load',{
                    sys_id:currentSysId
                });
            }
        });

        $('#catalog_sysid').combobox({
            method: 'get',
            url: '{{projcfg.appurl}}/public/sysData',
            valueField:'_id',
            textField:'sys_name',
            value:currentSysId,
            editable:false,
            required:true
        });

        $('#report_sysid').combobox({
            method: 'get',
            url: '{{projcfg.appurl}}/public/sysData',
            valueField:'_id',
            textField:'sys_name',
            value:currentSysId,
            editable:false,
            required:true,
            onChange: function (newValue,oldValue) {
                // 加载角色菜单操作树
                //initFormCatalogTree(newValue);
                initFormCatalogTree(newValue);
                if(currentSysId == newValue) {
                    $('#report_catalogid').combotree('setValue', currentCatalogpid);
                }
                else {
                    $('#report_catalogid').combotree('setValue', '0');
                }
                currentSysId = newValue;
                $('#inputSysId').combobox('setValue', currentSysId);
            }
        });

        initLeftCatalogTree(currentSysId);

        initFormCatalogTree(currentSysId);

        $('#reportDataTable').datagrid('load',{
            sys_id:currentSysId
        });

        $('#roleDataTable').datagrid('load',{
            sys_id:currentSysId
        });
    });

    $('#roleDataTable').datagrid({
        url: '{{projcfg.appurl}}/admin/api/common/uum/role',
        method:'get',
        //data:{sys_id:currentSysId},
        rownumbers:true,
        striped:true,
        fitColumns:true,
        fit:true,
        border:true,
        singleSelect:true,
        selectOnCheck:false,
        columns:[[
            {field:'_id',checkbox:true},
            {"field": "role_name","title":"角色名称","width":120}
        ]],
        onLoadSuccess:function(json) {
            if(!json.success) {
                msgError(json.msg + ',错误代码:' + json.code);
            }
        },
        onLoadError:function() {
            msgError('加载数据出现时发生错误,请稍候重试...');
