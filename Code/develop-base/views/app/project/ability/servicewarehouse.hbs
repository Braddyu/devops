    //项目详情
    function to_detail(){
        window.location.href = "{{projcfg.appurl}}/servicedetail";
    }



    function doSearch() {
        $('#servcieDataTable').datagrid('reload');
    }
    function doClear() {
        doSearch();
    }
    function doAdd(value) {
        var validate = $('#serviceForm').form('validate');
        if(!validate) {
            return false;
        }
        $.ajax({
            url: '{{projcfg.appurl}}/api/project/ability/services/develop/sm/update',
            type: 'put',
            data: $('#serviceForm').serializeJson(),
            success: function (data) {
                if(data.success) {
                    msgSuccess(data.msg);
                    closeDialog();
//                    doSearch();
                    window.location.href = "{{projcfg.appurl}}/servicem";
                }
                else {
                    msgError(data.msg+',错误代码:'+data.code);
                }
            }
        });

    }
    // 打开页面
    function openPage(title, value,serviceId,projecttype,version, callback) {
        $("#serviceName").html(value);
        $("#serviceId").val(serviceId);
        $("#projectType").val(projecttype);
        $("#verValue").html(version);
        $("#serVersion").val(version);
        value = '';
        $('#myModal').show();
        $('#myModal').mydialog({
            title:title,
            width: 700,
            height: 485,
            top:100,
            modal: true,
            myButtons:[
                {
                    text:'创建',
                    btnCls:'btn btn-blue',
                    handler:function(){
                        callback(value);
                    }
                },
                {
                    text:'关闭',
                    btnCls:'btn btn-danger',
                    handler:function(){
                        closeDialog();
                    }
                }
            ]
        });
    }

    // 清空新增表单数据
    function clear() {
        $('#serviceForm').form('clear');
    }

    // 关闭窗口
    function closeDialog() {
        $('#myModal').dialog('close');
        clear();
    }


</script>