                    $("#ititle").attr("src",p);
                    p1='data:'+data.data[0].pictureType+';base64 ,'+data.data[0].appPicture;
                    $(".images").attr("src",p1);
                    shuoming=data.data[0].installnotify;
                }
            })
        })
    </script>


