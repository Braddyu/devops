            method:'get',
            queryParams:{'projectId':projectid},
            rownumbers:false,
            //autoRowHeight:true,
            striped:true,
            fitColumns:true,
            fit:true,
            border:true,
            singleSelect:true,
            selectOnCheck:false,
            columns:[[
                {"field": "aaa","title":"所属项目","width":100,align:"center",
                    "formatter":function (value, rowData,rowIndex) {
                    return pn;
                }},
