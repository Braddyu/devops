{
  "appenders": [
    {
      "type":"console"
    }

  ,{
      "type": "file",
      "filename": "logs/request.log",
      "maxLogSize": "1024*1024",
      "backups":3,
      "layout": {
        "type": "pattern",
        "pattern": "[%h] - %m"
      },
      "category": "request_log"
    }

  ,{
      "type": "file",
      "filename": "logs/service.log",
      "maxLogSize": "1024*1024",
      "backups":3,
      "category": "service_log"
    },
    {
      "category": "logstash",
      "host": "127.0.0.1",
      "port": 18087,
      "type": "logstashUDP",
      "logType": "applog",
      "fields": {
        "appgroup": "dw",
        "appid": "proxy",
        "host": "127.0.0.1",
        "pid": "1"
      },
      "layout": {
        "type": "pattern",
        "pattern": "%m"
      }
    }
  ],
  "replaceConsole": true,
  "levels":{
    "request_log":"debug",
    "service_log":"debug",
    "console":"debug"
  }
}