{
  "appenders": [
    {
      "type":"console"
    }

  ,{
      "type": "file",
      "filename": "logs/request.log",
      "maxLogSize": "1024*1024",
      "backups":3,
      "layout": {
        "type": "pattern",
        "pattern": "[%h] - %m"
      },
      "category": "request_log"
    }

  ,{
      "type": "file",
      "filename": "logs/service.log",
      "maxLogSize": "1024*1024",
      "backups":3,
      "category": "service_log"
    }
  ],
  "replaceConsole": true,
  "levels":{
    "request_log":"debug",
    "service_log":"debug",
    "console":"debug"
  }
}